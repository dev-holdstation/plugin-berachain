{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "types": ["node"],
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "../../packages/core/**/*",
        "src/examples/**/*"
    ]
}
